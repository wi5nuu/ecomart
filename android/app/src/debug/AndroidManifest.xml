<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecomart.ecomart"> <!-- Ganti dengan package name proyekmu -->

    <!-- Permission yang diperlukan, misalnya akses internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="Ecomart"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:usesCleartextTraffic="true">  <!-- opsional, berguna saat dev/testing dengan koneksi HTTP -->

        <!-- Aktivitas utama aplikasi Flutter -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Tambahkan activity, service, meta‑data, permission tambahan di sini sesuai kebutuhan.
             Contoh jika kamu menggunakan Firebase, Google Maps, dan lain‑lain. -->

    </application>
</manifest>
